<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.marketplaceapp.ListFragment"
        android:label="Marketplace"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_listFragment_to_addEditFragment"
            app:destination="@id/addEditFragment" />
        <action
            android:id="@+id/action_listFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/addEditFragment"
        android:name="com.example.marketplaceapp.AddEditFragment"
        android:label="Add/Edit Item"
        tools:layout="@layout/fragment_add_edit">
        <argument
            android:name="itemId"
            app:argType="long"
            android:defaultValue="-1L" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.marketplaceapp.DetailFragment"
        android:label="Item Details"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="itemId"
            app:argType="long" />
        <action
            android:id="@+id/action_detailFragment_to_addEditFragment"
            app:destination="@id/addEditFragment" />
    </fragment>
</navigation>